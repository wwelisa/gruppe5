<launch>

    <!-- Argumente -->

    <!-- Ã–ffnet Gazebo -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/turtlebot3_world.world"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <!-- spawnt Roboter-->
    <include file="$(find gruppe5)/launch/multiple_robots.launch" />
    
    <!-- start RVIZ with map-->
    <node pkg="map_server" type="map_server" name="map_server" args="$(find soa)/maps/map_hexa.yaml" />
    <node name="repostion_map" pkg="tf" type="static_transform_publisher" args=" 0 0 0 0 0 0 /map /odom 50"/>
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find gruppe5)/cfg/standard.rviz"/>

</launch>
